# Default Docker Compose configuration that pulls the published GHCR image.
# Copy this file to docker-compose.yml and run:
#   docker compose pull
#   docker compose up -d
#
# Optional: create a .env next to this file and set ASSISTANTMD_TAG=v0.0.0 to pin a release.

services:
  assistant:
    image: ghcr.io/dodgybadger/assistantmd:${ASSISTANTMD_TAG:-latest}
    container_name: assistant
    restart: unless-stopped
    ports:
      - "127.0.0.1:8000:8000"    # FastAPI - localhost only
    volumes:
      - /absolute/path/to/your/vaults:/app/data
      - ./system:/app/system     # Persist settings, secrets, activity logs
    environment:
      - TZ=UTC
      - API_PORT=8000
    
    # Resource limits for better container security
    deploy:
      resources:
        limits:
          memory: 1G
          cpus: '1.0'
        reservations:
          memory: 512M
          cpus: '0.5'
    
    # Security options
    security_opt:
      - no-new-privileges:true
    
    # Health check (compose-only so it can be disabled/overridden easily)
#    healthcheck:
#      test: ["CMD", "curl", "-f", "http://localhost:${API_PORT:-8000}/api/health"]
#      interval: 30s
