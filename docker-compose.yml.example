# Default Docker Compose configuration that pulls the published GHCR image.
# Copy this file to docker-compose.yml and run: docker compose up -d

services:
  assistant:
    image: ghcr.io/dodgybadger/assistantmd:latest
    container_name: assistantMD
    restart: unless-stopped
    ports:
      - "127.0.0.1:8000:8000"    # FastAPI - localhost only
    volumes:
      - /absolute/path/to/your/vaults:/app/data   # Pre-create path on the left of the colon & ensure owned by your user
      - ./system:/app/system                      # Pre-create path on the left of the colon & ensure owned by your user
    environment:
      - TZ=UTC
      - API_PORT=8000
    
    # Resource limits for better container security
    deploy:
      resources:
        limits:
          memory: 1G
          cpus: '1.0'
        reservations:
          memory: 512M
          cpus: '0.5'
    
    # Security options
    security_opt:
      - no-new-privileges:true
    
    # Health check (compose-only so it can be disabled/overridden easily)
#    healthcheck:
#      test: ["CMD", "curl", "-f", "http://localhost:${API_PORT:-8000}/api/health"]
#      interval: 30s
#      timeout: 10s
#      retries: 3
#      start_period: 40s
