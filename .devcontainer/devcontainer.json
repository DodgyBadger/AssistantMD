{
  "name": "AssistantMD (envbuilder)",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "root",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "postCreateCommand": "/bin/bash -lc 'cd /workspaces/${localWorkspaceFolderBasename} && python -m pip install --upgrade pip setuptools wheel && python -m pip install --no-cache-dir uv && python -m pip install --no-cache-dir -e ./docker[dev]'",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python3.13",
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "tamasfe.even-better-toml",
        "charliermarsh.ruff",
        "qwtel.sqlite-viewer",
        "codezombiech.gitignore"        
      ]
    }
  }
}
